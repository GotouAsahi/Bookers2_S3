<%= @user.name %>さんとのチャット
<div class="message">
  <%= render "chats/messages", chats: @chats %>
</div>
<%= form_with model: @chat, local: false do |f| %>
  <div class="errors">
    <%= render "layouts/errors", obj: f.object %>
  </div>
  <%= f.text_field :message, placeholder: "メッセージを入力してください" %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit "送信" %>
<% end %>